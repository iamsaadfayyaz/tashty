<script type="text/javascript">
    function onSuccessBuyer(user) {
        var obj = user.getBasicProfile();
        reg.JoinTashty(obj.getEmail(), obj.getName(), '', false, obj.getId(), true, false);
    }
    $("#BuyerLoginForm").submit(function (e) {
        
        e.preventDefault();
        var email = _get('txtBuyerEmail');
        _set('hdnBuyerEmail', email);
        _setIn('lblBuyerEmail', email);

        reg.CheckEmail(email, 'join-us-model', 'buyer-join-model', 'txtBuyerErrorMsg', false, true, '', false, false);
     });

    $("#buyerJoinForm").submit(function (e) {
        e.preventDefault();
        updateSubmitButtonText("Processing", "btnBuyerJoin", "Join");
        var email = _get('hdnBuyerEmail');
        var username = _get('txtBJUsername');
        var password = _get('txtBJPassword');

        reg.JoinTashty(email, username, password, false, '', false, false);
    });

    $('.join-us-login').click(function () {
        OpenModel("login-model");
        CloseModel("join-us-model");
        // CloseModel("buyer-join-model");
    });
