
	<h2>Account Info</h2>
	<p>Add Account Info For payment.</p>
	<div class="border-bottom text-right m-b-lg" style="padding-bottom:5px;"><small><span class="text-danger">*</span>Mandatory fields</small></div>
	<div class="row">
		<div class="col-lg-10 wizardform">
			<div class="form-group">
				<label class="col-sm-2 control-label" for="a-title">Account Title</label>
				<div class="col-sm-5">
					<input type="text" class="form-control input-lg" placeholder="Account Title" name="txtAccountTitle" id="txtAccountTitle" required>
				</div>
			</div>
			<div class="form-group">
				<label class="col-sm-2 control-label" for="bnk-name">Enter Bank Name</label>
				<div class="col-sm-5">
					<input type="text" class="form-control input-lg" placeholder="Bank Name" name="txtBankName" id="txtBankName" required>
				</div>
			</div>
			<div class="form-group m-b">
				<label class="col-sm-2 control-label">Account Number</label>
				<div class="col-sm-8">
					<input type="text" class="form-control input-lg" placeholder="Enter Your Account Number" name="txtAccountNumber" id="txtAccountNumber" required>
				</div>
			</div>
			<div class="f1-buttons">
				<button type="button" id="btnSaveAccInfo" class="btn btn-success btn-lg">Submit</button>

				<button id="btnSellerRegSubmit" type="submit" class="btn btn-next btn-success btn-lg" style="display:none;" >Submit</button>
			</div>
		</div>
	</div>


	<script>

    $('#btnSaveAccInfo').on('click', function () {


        var IsValid = ValidateAccountInfo();

            if (IsValid==true) {
             			reg.SaveSellerAccountInfo('true');
                        $('.btn-next').trigger("click");
            }
            else { $("#frmSellerReg").find(':submit').click();}
	});


	</script>
